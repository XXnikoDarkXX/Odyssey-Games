<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"

    >


    <ImageView
        android:id="@+id/marcoNaranjaOpciones"
        android:layout_width="579dp"
        android:layout_height="395dp"
        android:layout_marginStart="8dp"

        android:contentDescription="@string/descripcion_gui_redes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo_Opciones"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/marco_narana_horizontal" />

    <TextView
        android:id="@+id/txtNivelSonido"
        android:layout_width="160dp"
        android:layout_height="33dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="@string/nivelSonido"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toTopOf="@+id/marcoNaranjaOpciones" />

    <SeekBar
        android:id="@+id/nivelMusica"
        android:layout_width="185dp"
        android:layout_height="25dp"


        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/txtNivelMusica"
        app:layout_constraintTop_toBottomOf="@+id/nivelSonido" />

    <TextView
        android:id="@+id/txtNivelMusica"
        android:layout_width="157dp"

        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:text="@string/nivelMusica"

        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/switch2"
        app:layout_constraintTop_toBottomOf="@+id/txtNivelSonido" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch2"
        android:layout_width="131dp"
        android:layout_height="48dp"


        android:layout_marginStart="36dp"
        android:text="@string/musica"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/marcoNaranjaOpciones"
        tools:layout_editor_absoluteY="91dp" />

    <SeekBar
        android:id="@+id/nivelSonido"
        android:layout_width="185dp"
        android:layout_height="25dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/txtNivelSonido"
        app:layout_constraintTop_toTopOf="@+id/marcoNaranjaOpciones" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="131dp"
        android:layout_height="48dp"

        android:layout_marginStart="36dp"
        android:layout_marginBottom="20dp"
        android:text="@string/sonido"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/switch2"
        app:layout_constraintStart_toStartOf="@+id/marcoNaranjaOpciones" />

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@color/Naranja"
        android:backgroundTintMode="add"
        android:onClick="volverInicio"
        android:text="@string/atras"
        app:layout_constraintBottom_toTopOf="@+id/btnCambiar"
        app:layout_constraintEnd_toEndOf="@+id/marcoNaranjaOpciones"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="@+id/btnCambiar" />

    <TextView
        android:id="@+id/txtCambioPass"
        android:layout_width="328dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/cambioPass"

        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recycleOpciones"
        app:layout_constraintEnd_toStartOf="@+id/btnAtras"
        app:layout_constraintStart_toStartOf="@+id/marcoNaranjaOpciones"
        app:layout_constraintTop_toBottomOf="@+id/txtNivelMusica" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleOpciones"
        android:layout_width="336dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/marcoNaranjaOpciones"
        app:layout_constraintEnd_toStartOf="@+id/btnAtras"
        app:layout_constraintStart_toStartOf="@+id/marcoNaranjaOpciones" />

    <Button
        android:id="@+id/btnCambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="52dp"
        android:layout_weight="1"
        android:background="@color/Naranja"
        android:onClick="cambiaPass"
        android:text="@string/cambiar"
        app:layout_constraintBottom_toBottomOf="@+id/marcoNaranjaOpciones"
        app:layout_constraintEnd_toEndOf="@+id/marcoNaranjaOpciones" />

    <ImageView
        android:id="@+id/logo_Opciones"
        android:layout_width="74dp"
        android:layout_height="176dp"

        android:contentDescription="@string/descripcion_logo_redes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/marcoNaranjaOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/opciones" />


</androidx.constraintlayout.widget.ConstraintLayout>