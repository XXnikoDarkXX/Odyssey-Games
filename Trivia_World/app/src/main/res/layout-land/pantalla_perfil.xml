<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    >


    <ImageView
        android:id="@+id/marcoNaranajaPerfil"
        android:layout_width="619dp"
        android:layout_height="385dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/descripcion_gui_redes"

        app:layout_constraintStart_toEndOf="@+id/logo_perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/marco_narana_horizontal" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:layout_marginStart="144dp"
        android:text="@string/txtNombre"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        tools:layout_editor_absoluteY="107dp" />

    <Button
        android:id="@+id/btnIrLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="164dp"
        android:layout_marginBottom="52dp"
        android:background="@color/Naranja"
        android:onClick="irALogin"
        android:text="@string/txtLogin"
        app:layout_constraintBottom_toBottomOf="@+id/marcoNaranajaPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPuntuacion"
        app:layout_constraintVertical_bias="0.958" />

    <TextView
        android:id="@+id/txtPuntuacion"
        android:layout_width="239dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="68dp"
        android:text="@string/puntuacion"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <Button
        android:id="@+id/btnEnviarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="44dp"
        android:background="@color/naranjaa"
        android:text="@string/enviarLogin"
        android:onClick="enviarFoto"
        app:layout_constraintEnd_toStartOf="@+id/btnIrLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/marcoNaranajaPerfil"
        app:layout_constraintTop_toBottomOf="@+id/subirFoto" />

    <TextView
        android:id="@+id/subirFoto"
        android:layout_width="221dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="44dp"
        android:text="@string/subirFoto"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/txtPuntuacion"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <ImageView
        android:id="@+id/logo_perfil"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:onClick="irAInicio"
        android:contentDescription="@string/txtDescLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perfil" />

    <ImageView
        android:layout_width="156dp"
        android:id="@+id/avatar"
        android:layout_height="137dp"
        android:contentDescription="@string/avatarDescripcion"

        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@+id/marcoNaranajaPerfil"
        app:layout_constraintTop_toTopOf="@+id/marcoNaranajaPerfil"
        app:srcCompat="@drawable/avatar_perfil" />


</androidx.constraintlayout.widget.ConstraintLayout>