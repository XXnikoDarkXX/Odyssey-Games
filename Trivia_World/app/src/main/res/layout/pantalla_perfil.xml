<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky">


    <ImageView
        android:id="@+id/marcoNaranajaPerfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/descripcion_gui_redes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_perfil"
        app:srcCompat="@drawable/gui_redes" />

    <ImageView
        android:id="@+id/logo_perfil"
        android:layout_width="286dp"
        android:layout_height="75dp"
        android:contentDescription="@string/txtDescLogo"
        android:onClick="irAInicio"
        app:layout_constraintBottom_toTopOf="@+id/marcoNaranajaPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perfil" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/marcoNaranajaPerfil"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/marcoNaranajaPerfil"
        app:layout_constraintTop_toTopOf="@+id/marcoNaranajaPerfil"
        app:layout_constraintVertical_bias="0.203">

        <Button
            android:id="@+id/btnIrLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"

            android:background="@color/Naranja"
            android:onClick="irALogin"
            android:text="@string/txtLogin" />

        <TextView
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:text="@string/nombreUsuario"
            android:textAlignment="center"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:text="@string/txtNombre"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
        android:layout_gravity="center"
            android:contentDescription="@string/avatarDescripcion"
            app:srcCompat="@drawable/avatar_perfil" />

        <TextView
            android:id="@+id/subirFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"

            android:text="@string/subirFoto"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic"

            />

        <Button
            android:id="@+id/btnEnviarFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"

            android:background="@color/naranjaa"
            android:onClick="enviarFoto"
            android:text="@string/enviarLogin" />

        <TextView
            android:id="@+id/txtPuntuacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:text="@string/puntuacion"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>