<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="395dp"
        android:layout_height="638dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imagenP"
            android:layout_width="185dp"
            android:layout_height="201dp"
            android:backgroundTint="#00FFFFFF"
            android:clickable="true"
            android:maxWidth="250dp"
            android:maxHeight="280dp"
            android:onClick="subirImagen"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/intelestari" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:entries="@array/choose"
            android:textAlignment="center"
            android:background="@drawable/botones_redondos"
            android:backgroundTint="@color/azulEnlace"/>

        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="312dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/preguntaI"
                android:layout_width="380dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/color_degradado"
                android:hint="@string/textoTVP"
                android:cursorVisible="true"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/respuesta1"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:cursorVisible="true"
                android:background="@drawable/color_degradado"
                android:hint="@string/textoTV"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/respuesta2"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/color_degradado"
                android:backgroundTint="@color/verde"
                android:hint="@string/textoTVC"
                android:cursorVisible="true"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/respuesta3"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/color_degradado"
                android:hint="@string/textoTV"
                android:cursorVisible="true"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/respuesta4"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/color_degradado"
                android:hint="@string/textoTV"
                android:cursorVisible="true"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:layout_marginBottom="30dp"
        android:onClick="subirImagen"
        android:backgroundTint="@color/Naranja"
        android:text="@string/bsubir"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>