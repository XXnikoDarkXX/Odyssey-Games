<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/amarillo"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/tapiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/nombreIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints=""
                android:hint="@string/nombre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/apellidosIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints=""
                android:hint="@string/apellidos"
                android:inputType="text" />

            <EditText
                android:id="@+id/fechaNacimientoIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints="@string/fechaNacimiento"
                android:hint="@string/fechaNacimiento"
                android:inputType="date" />

            <EditText
                android:id="@+id/direccionIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints="@string/direccion"
                android:hint="@string/direccion"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/ciudadIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints="@string/ciudad"
                android:hint="@string/ciudad"
                android:inputType="text" />

            <EditText
                android:id="@+id/paisIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints="@string/pais"
                android:hint="@string/pais"
                android:inputType="text" />

            <EditText
                android:id="@+id/telefonoIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints="@string/telefono"
                android:hint="@string/telefono"
                android:inputType="phone" />

            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints="@string/usuarioRegistro"
                android:ems="10"
                android:hint="@string/usuarioRegistro"
                android:inputType="phone" />

            <EditText
                android:id="@+id/contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints="@string/telefono"
                android:ems="10"
                android:hint="@string/contraseñaRegistro"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/contraseñaR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="200dp"
                android:autofillHints="@string/contraseñaRegistro"
                android:ems="10"
                android:hint="@string/contraseñaRegistro"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:background="#ff9000"
                android:text="@string/enviarRegistro"

                />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>