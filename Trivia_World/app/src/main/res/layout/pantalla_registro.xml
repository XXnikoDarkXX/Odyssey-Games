<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    >

    <ImageView
        android:id="@+id/marcoAmarrillo"
        android:layout_width="390dp"
        android:layout_height="502dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/descripcion_gui_redes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_world_final"
        app:srcCompat="@drawable/gui_redes" />

    <ScrollView
        android:id="@+id/scrollViewRegistro"
        android:layout_width="263dp"
        android:layout_height="451dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/marcoAmarrillo"
        app:layout_constraintVertical_bias="0.157">

        <LinearLayout
            android:id="@+id/tapiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nombreIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints=""
                android:hint="@string/nombre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/apellidosIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints=""
                android:hint="@string/apellidos"
                android:inputType="text" />

            <EditText
                android:id="@+id/fechaNacimientoIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/fechaNacimiento"
                android:hint="@string/fechaNacimiento"
                android:inputType="date" />

            <EditText
                android:id="@+id/direccionIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/direccion"
                android:hint="@string/direccion"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/ciudadIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/ciudad"
                android:hint="@string/ciudad"
                android:inputType="text" />

            <EditText
                android:id="@+id/paisIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/pais"
                android:hint="@string/pais"
                android:inputType="text" />

            <EditText
                android:id="@+id/telefonoIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/telefono"
                android:hint="@string/telefono"
                android:inputType="phone" />

            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/usuarioRegistro"
                android:ems="10"
                android:hint="@string/usuarioRegistro"
                android:inputType="phone" />

            <EditText
                android:id="@+id/contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/telefono"
                android:ems="10"
                android:hint="@string/contraseñaRegistro"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/contraseñaR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/contraseñaRegistro"
                android:ems="10"
                android:hint="@string/contraseñaRegistro"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="70dp"
                android:background="#ff9000"
                android:text="@string/enviarRegistro"

                />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/logo_world_final"
        android:layout_width="405dp"
        android:layout_height="63dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:contentDescription="@string/descripcion_logo_redes"
        app:layout_constraintBottom_toTopOf="@+id/marcoAmarrillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trivia_world_final" />


</androidx.constraintlayout.widget.ConstraintLayout>